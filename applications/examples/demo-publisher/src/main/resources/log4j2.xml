<?xml version="1.0" encoding="UTF-8"?>
<configuration status="WARN">
    <appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyyy-mm-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </Console>

        <File name="App" fileName="logs/app.log">
            <PatternLayout pattern="%d{yyyy-mm-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </File>

        <File name="Publisher" fileName="logs/publisher.log">
            <PatternLayout pattern="%d{yyyy-mm-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </File>

    </appenders>

    <loggers>
        <logger name="net.corda.components.examples.publisher">
            <appender-ref ref="Publisher" level="info"/>
        </logger>

        <logger name="Console">
            <appender-ref ref="Console" level="info"/>
        </logger>

        <root level="debug">
            <appender-ref ref="App" level="info"/>
        </root>
    </loggers>
</configuration>
