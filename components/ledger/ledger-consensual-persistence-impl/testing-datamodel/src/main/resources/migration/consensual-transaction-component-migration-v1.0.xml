<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd">

    <changeSet author="R3.Corda" id="consensual-transaction-component-migration-v1.0">
        <createTable tableName="consensual_transaction_component">
            <column name="transaction_id" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="group_idx" type="INTEGER">
                <constraints nullable="false"/>
            </column>
            <column name="leaf_idx" type="INTEGER">
                <constraints nullable="false"/>
            </column>
            <column name="data" type="BINARY">
                <constraints nullable="false"/>
            </column>
            <column name="hash" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="created" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addPrimaryKey tableName="consensual_transaction_component"
                       columnNames="transaction_id,group_idx,leaf_idx"
                       constraintName="pk_consensual_transaction_component"/>
        <addForeignKeyConstraint baseTableName="consensual_transaction_component"
                                 baseColumnNames="transaction_id"
                                 constraintName="fk_consensual_transaction_id_component"
                                 referencedTableName="consensual_transaction"
                                 referencedColumnNames="id"/>
    </changeSet>
</databaseChangeLog>
