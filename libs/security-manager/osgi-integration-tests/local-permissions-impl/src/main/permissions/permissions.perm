${permissions;packages;services;capabilities}

# Additional package import permissions that are not automatically generated by the macro.
(org.osgi.framework.PackagePermission "java.io" "import")
(org.osgi.framework.PackagePermission "java.lang" "import")
(org.osgi.framework.PackagePermission "java.nio.charset" "import")
(org.osgi.framework.PackagePermission "java.util" "import")

# We grant a permission allowed by `CordaSecurityManager`, and another that is denied by `CordaSecurityManager`.
# This should mean that in practice, all `AdminPermission`s except `context` are denied.
(org.osgi.framework.AdminPermission "*" "context")
(org.osgi.framework.AdminPermission "*" "lifecycle")