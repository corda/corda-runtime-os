<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd">

    <changeSet author="R3.Corda" id="consensual-transaction-migrations-v1.0">
        <createTable tableName="consensual_transaction">
            <column name="id" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="privacy_salt" type="BINARY">
                <constraints nullable="false"/>
            </column>
            <column name="account_id" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="created" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addPrimaryKey tableName="consensual_transaction"
                       columnNames="id"
                       constraintName="pk_consensual_transaction"/>

        <createTable tableName="consensual_transaction_cpk">
            <column name="transaction_id" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="file_checksum" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint baseTableName="consensual_transaction_cpk"
                                 baseColumnNames="transaction_id"
                                 constraintName="fk_consensual_transaction_cpk_id"
                                 referencedTableName="consensual_transaction"
                                 referencedColumnNames="id"/>
        <addForeignKeyConstraint baseTableName="consensual_transaction_cpk"
                                 baseColumnNames="file_checksum"
                                 constraintName="fk_consensual_transaction_cpk_file_checksum"
                                 referencedTableName="consensual_cpk"
                                 referencedColumnNames="file_checksum"/>
    </changeSet>
</databaseChangeLog>
